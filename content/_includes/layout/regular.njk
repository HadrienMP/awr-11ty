      <a id="show-nav" href="#">
        <i class="fa fa-bars"></i>
      </a>
    </div>
    <div id="mobile-nav">
      <a id="close-nav" href="#">
        <i class="fa fa-times"></i>
      </a>
      <a class=" active" href="/" id="home">AWR</a>
      <a class=" " href="/a-propos/" id="">À propos</a>
      <a class=" " href="/atelier/" id="">L'atelier</a>
      <a class=" " href="/realisations/" id="">Réalisations</a>
      <a class="call-to-action " href="/tarifs/" id="">Tarifs</a>
    </div>
  </nav>
  <footer>
    {% include "./common/social.njk" %}
  </footer>
  <script src="/js/nav.js"></script>
  <script src="/js/basicLightbox.min.js"></script>
